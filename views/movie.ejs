<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Movies</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.0/css/bulma.min.css">
  </head>
  <body>
    <section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
    <nav class="breadcrumb is-centered" aria-label="breadcrumbs">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/movie">Movie</a></li>
        <li><a href="/prodHouses">ProHouses</a></li>
      </ul>
    </nav>
    <h1 class="title">Halaman Movies</h1>
    <table class="table is-bordered is-striped is-narrow is-fullwidth">
      <thead>
      <tr>
         <th>Name</th>
         <th>Release Year</th>
         <th>Genre</th>
         <th>Production House</th>
         <th>Actions</th>
      </tr>
      </thead>
      <tbody>
        <%dataMovies.forEach(dataMovie=>{%>
          <tr>
             <td><%=dataMovie.name%></td>
             <td><%=dataMovie.released_year%></td>
             <td><%=dataMovie.genre%></td>
             <td><%=dataMovie.nameProd%></td>
             <td>
                  <span class="icon has-text-info">
                    <a class="is-link" href="/movie/edit/<%=dataMovie.id%>">Edit</a>
                  </span>
            </td>
          </tr>
        <%})%>
      </tbody>
    </table>
  </body>
</html>
