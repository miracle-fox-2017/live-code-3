<html>

<head>
    <title>Movie</title>
</head>

<body>
    <header>
        <h3>Halaman Movie</h3>
    </header>

    <form action="/movies/edit/<%=dataMovie.id%>" method="POST">
        Movie Name :
        <input type="text" name="name" value="<%= dataMovie.name%>" placeholder="Name" /> Year :
        <input type="text" name="released_year" value="<%= dataMovie.released_year%>" placeholder="Released Year" /> Genre:
        <select name="genre">
            <% if(dataMovie.genre == 'comedy') {%>
                <option value="comedy" selected>
                    comedy
                </option>
                <option value="action">
                      action
                </option>
                <option value="horor">
                    horor
                </option>
                <option value="drama">
                    drama
                </option>
            <%} else if(dataMovie.genre == 'drama') {%>
                <option value="comedy">
                    comedy
                </option>
                <option value="action">
                    action
                </option>
                <option value="horor">
                    horor
                </option>
                <option value="drama" selected>
                    drama
                </option>
            <%} else if(dataMovie.genre == 'action') {%>
                <option value="comedy">
                    comedy
                </option>
                <option value="action" selected>
                    action
                </option>
                <option value="horor">
                    horor
                </option>
                <option value="drama">
                    drama
                </option>
            <%} else if(dataMovie.genre == 'horor') {%>
                <option value="comedy">
                    comedy
                </option>
                <option value="action">
                      action
                    </option>
                    <option value="horor" selected>
                            horor
                         </option>
                         <option value="drama">
                                drama
                             </option>
            <%}%>
                            
            </select> Production House :
        <select name="prodHouseId"> 
            <% dataProdHouse.forEach((ph)=> { 
                if(ph.id == dataMovie.prodHouseId){
                    %>
               
                <option value="<%= ph.id%>" selected>
                        <%= ph.name_prodHouse%>
                </option>
                <% }else{%>
                <option value="<%= ph.id%>">
                            <%= ph.name_prodHouse%>
                </option>
                <%}})%> 
        </select>
        <input type="submit" value="Save">
    </form>
</body>

</html>